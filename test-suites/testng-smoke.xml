<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SmokeSuite" parallel="classes" thread-count="2">
    <listeners>
        <listener class-name="com.saucedemo.utils.TestListener" />
        <listener class-name="com.saucedemo.utils.RetryListener" />
    </listeners>
    <test name="SmokeTests">
        <groups>
            <run>
                <include name="smoke" />
            </run>
        </groups>
        <classes>
            <class name="com.saucedemo.tests.LoginTest" />
			<class name="com.saucedemo.tests.CheckoutTest" />            
        </classes>
    </test>
</suite>