<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="FunctionalSuite" parallel="classes" thread-count="2">
	<listeners>
		<listener class-name="com.saucedemo.utils.TestListener" />
		<listener class-name="com.saucedemo.utils.RetryListener" />
	</listeners>
	<test name="FunctionalTests">
		<groups>
			<run>
				<include name="functional" />
			</run>
		</groups>
		<classes>
			<class name="com.saucedemo.tests.LoginTest" />
			<class name="com.saucedemo.tests.ProductCatalogTest" />
			<class name="com.saucedemo.tests.ProductDetailsTest" />
			<class name="com.saucedemo.tests.CartTest" />
			<class name="com.saucedemo.tests.CheckoutTest" />
			<class name="com.saucedemo.tests.NavigationTest" />
		</classes>
	</test>
</suite>

